    function drawChart() {

//
        var data_mark = google.visualization.arrayToDataTable([
            ['Mark', ''],
            ['hd(>80%)', 11],
            ['d(70%-80%)', 2],
            ['c(60%-70%)', 2],
            ['p(50%-60%)', 2],
            ['f(<50%)', 7]
        ]);
